<Window x:Class="Compiler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Compiler"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox Name="Text" HorizontalAlignment="Left" Margin="66,0,0,0" Text="Write Your code here" TextWrapping="Wrap" VerticalAlignment="Center" Width="290" Height="400" TextChanged="TextBox_TextChanged" AcceptsReturn="True"/>
        <Grid Margin="423,10,30,10">
            <DataGrid Name="Table" Height="400" Cursor="" ColumnWidth="145" SelectionChanged="Table_SelectionChanged_3" Margin="28,7,10,7"/>
        </Grid>
        <Button Content="Compile" HorizontalAlignment="Left" Margin="383,202,0,0" VerticalAlignment="Top" Click="Compile"/>
        <Button Content="Clear" HorizontalAlignment="Left" Margin="392,254,0,0" VerticalAlignment="Top" Click="Clear"/>

    </Grid>
</Window>
